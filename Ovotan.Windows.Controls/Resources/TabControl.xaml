<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:controls="clr-namespace:Ovotan.Windows.Controls"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type controls:TabHeader}">
        <Setter Property="Background" Value="#3B4F81"/>
        <Setter Property="BorderBrush" Value="#3B4F81"/>
        <Setter Property="Foreground" Value="#F4F5FF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="3,0,3,2"/>
        <Setter Property="ActiveBackground" Value="#F5CC84"/>
        <Setter Property="ActiveBorderBrush" Value="#F5CC84"/>
        <Setter Property="ActiveForeground" Value="Black"/>
        <Setter Property="MouseOverBackground" Value="#BBC6F1"/>
        <Setter Property="MouseOverBorderBrush" Value="#BBC6F1"/>
        <Setter Property="MouseOverForeground" Value="Black"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:TabHeader}">
                    <Border SnapsToDevicePixels="True"
                                Padding="{TemplateBinding Padding}"
                                TextBlock.Foreground="{TemplateBinding Foreground}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                Background="{TemplateBinding Background}">
                        <DockPanel Margin="0"  VerticalAlignment="Center" HorizontalAlignment="Stretch">
                            <TextBlock Text="{Binding Header}"/>
                            <controls:ViewboxIcon Opacity="0.8" SnapsToDevicePixels="False" x:Name="ViewBoxIcon" Visibility="Hidden" 
                                Margin="3,3,0,0" Width="12" Height="12" Viewbox="{DynamicResource OVBT_Close}"/>
                        </DockPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsActive" Value="False"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Background" Value="{Binding MouseOverBackground}"/>
                                <Setter Property="BorderBrush" Value="{Binding MouseOverBorderBrush}"/>
                                <Setter Property="TextBlock.Foreground" Value="{Binding MouseOverForeground}"/>
                                <Setter TargetName="ViewBoxIcon" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ViewBoxIcon" Property="BaseColor" Value="#40568D"/>
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <Trigger Property="IsActive" Value="True">
                            <Setter Property="Background" Value="{Binding ActiveBackground}"/>
                            <Setter Property="BorderBrush" Value="{Binding ActiveBorderBrush}"/>
                            <Setter Property="TextBlock.Foreground" Value="{Binding ActiveForeground}"/>
                            <Setter TargetName="ViewBoxIcon" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="ViewBoxIcon" Property="BaseColor" Value="#744B23"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>




    <Style TargetType="{x:Type controls:TabHeaders}">
        <Style.Resources>
            <SolidColorBrush x:Key="ToolBarBackground">#CCD5F0</SolidColorBrush>
            <SolidColorBrush x:Key="ToggleButtonMouseOverBackground">#FFFFFF</SolidColorBrush>
            <SolidColorBrush x:Key="ToggleButtonArrowFill">#D9E0F8</SolidColorBrush>
            <SolidColorBrush x:Key="ToggleButtonListBorder">#94A6CA</SolidColorBrush>
            <SolidColorBrush x:Key="ToggleButtonListBackground">#E9EEFF</SolidColorBrush>
            <Style TargetType="{x:Type Menu}">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="Red"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Style.Resources>
        <Setter Property="Background" Value="Red"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:TabHeaders}">
                    <ControlTemplate.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="0,0,1,0"/>
                            <Setter Property="Background" Value="#3B4F81"/>
                        </Style>
                    </ControlTemplate.Resources>
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Canvas x:Name="Canvas" VerticalAlignment="Stretch" ></Canvas>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="0">
                            <Menu VerticalAlignment="Bottom" x:Name="ActionMenu" Grid.Column="1" Grid.Row="0" Background="Transparent">

                                <MenuItem x:Name="DocumentDropDownList" BorderThickness="0" Padding="0">
                                    <MenuItem.Header>
                                        <controls:ViewboxIcon 
                                            Width="12" Height="12" Opacity="0.8"
                                            BaseColor="White"
                                            Viewbox="{DynamicResource OVBT_Close1}"></controls:ViewboxIcon>
                                    </MenuItem.Header>
                                </MenuItem>
                                <MenuItem  Padding="0" BorderThickness="0">
                                    <MenuItem.Header>
                                        <controls:ViewboxIcon 
                                            Width="12" Height="12" Opacity="0.8"
                                            BaseColor="White"
                                            Viewbox="{DynamicResource OVBT_Settings}"></controls:ViewboxIcon>
                                    </MenuItem.Header>
                                    <MenuItem 
                                              IsChecked="{Binding RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay,Path=IsMultiRows}"
                                              IsCheckable="True" Header="Показывать вкладки в нескольких строках"/>
                                </MenuItem>
                            </Menu>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>